{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "out",
    "types": ["node", "reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./src/*"],
    }
  }
}
